<h1>Modifier Joueur</h1>
<form method="POST" action="admin-player-edit">
    
    <label>Image de profil</label>
    <input type="file" name="editProfilImg">
    
    <label>Prénom</label>
    <input type="text" name="editFirstname">
    
    <label>Nom</label>
    <input type="text" name="editLastname">
    
    <label>Phone</label>
    <input type="text" name="editPhone">
    
    <label>Poste</label>
    <select name="editPosition">
        <option>--Poste--</option>
        <option>Gardiens</option>
        <option>Défenseur</option>
        <option>Milieu</option>
        <option>Attaquant</option>
    </select>
    
    <label>Pied Fort</label>
    <select name="editFoot">
        <option>--Pied Fort--</option>
        <option>Droit</option>
        <option>Gauche</option>
    </select>
    
    <label>Bio</label>
    <input type="textarea" name="editBio">
    <input type="submit" value="Modifier" name="editBtn">
</form>